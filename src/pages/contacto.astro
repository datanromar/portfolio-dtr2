---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
	<div class="contenedor">
		<div class="divuno">
			<p class="texto">
				¿Quieres ponerte en contacto conmigo para cualquier cosa? Te lo pongo fácil. 
			</p>

			<div class="contacto">
				<form action="/" method="get">
					<label class="Nombre" for="fname">Nombre</label>
					<input
						type="text"
						id="fname"
						name="nombre"
						placeholder="Tu nombre completo."
						required
					/>
					<label class="Correo" for="email">Correo electrónico</label>
					<input
						type="text"
						id="email"
						name="correo"
						placeholder="Tu correo electrónico."
						pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"
						required
					/>
					<label class="Mensaje" for="mensaje">Mensaje</label>
					<textarea
						id="mensaje"
						name="mensaje"
						style="height:100px; width: 300px; max-width: 300px; max-height: 100px;
						min-width: 300px; min-height: 100px; cursor: text;  resize: none;"
						required
						placeholder="¿Qué quieres contarme?"></textarea>

					<input class="botonsubmit" type="submit" value="Enviar" />
				</form>
			</div>
		</div>
	</div>
</MainLayout>

<style>
	.contenedor {
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 10px;
		background-color: rgba(0, 0, 0, 0.344);
	}

	.contacto {
		margin: 0px;
		padding: 0px;
		gap: 0px;
		color: white;
	}

	.contacto label {
		display: block;
		text-align: center;
		margin: auto;

		padding: 5px 5px 5px 5px;
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
			"Helvetica Neue", Arial, sans-serif, "Apple Color Emoji",
			"Segoe UI Emoji", "Segoe UI Symbol";
		color: rgb(255, 255, 255);
		width: 30%;
		height: 30%;

		border-radius: 1rem;
		border: 0px;
	}

	

	.contacto input,
	.contacto textarea {
		display: block;
		text-align: center;
		margin: auto;
		padding: 5px 5px 5px 5px;
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
			"Helvetica Neue", Arial, sans-serif, "Apple Color Emoji",
			"Segoe UI Emoji", "Segoe UI Symbol";
		color: rgb(0, 0, 0);
		width: 30%;
		height: 30%;

		border-radius: 1rem;
		border: 0px;
	}
	.contacto input[type="submit"] {
		display: block;
		text-align: center;
		margin: auto;
		margin-top: 10px;
		padding: 5px 5px 5px 5px;
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
			"Helvetica Neue", Arial, sans-serif, "Apple Color Emoji",
			"Segoe UI Emoji", "Segoe UI Symbol";
		color: rgb(255, 255, 255);
		width: 30%;
		height: 30%;

		border-radius: 1rem;
		border: 0px;
	}

	.divuno {
		border-radius: 5px;
		overflow: hidden;
		max-width: 90%;
	}

	.texto {
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
			"Helvetica Neue", Arial, sans-serif, "Apple Color Emoji",
			"Segoe UI Emoji", "Segoe UI Symbol";
		text-align: center;
		color: rgb(255, 255, 255);
		font-size: 15px;
		max-width: 100%;
		padding: 0px;
		margin: 4px;
		box-sizing: border-box;
	}

	.botonsubmit {
		display: block;
		width: auto;
		height: auto;
		margin: auto;
		padding: 0px 0.9rem;
		vertical-align: middle;
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
			"Helvetica Neue", Arial, sans-serif, "Apple Color Emoji",
			"Segoe UI Emoji", "Segoe UI Symbol";
		font-size: 1em;
		font-weight: 400;
		border-radius: 1rem;
		overflow: hidden;
		text-overflow: ellipsis;
		background-color: rgb(0, 0, 0);
		color: rgb(255, 255, 255);
		text-decoration: none;
		opacity: 1;
		transition: 0.3s;
	}

	.botonsubmit:hover {
		background-color: #1e90ff;
	}
</style>
