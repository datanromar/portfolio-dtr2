---
import MainLayout from "../layouts/MainLayout.astro";
import Carta from "../components/Carta.astro";
import Carta2 from "../components/Carta2.astro";
import Carta3 from "../components/Carta3.astro";
import Carta4 from "../components/Carta4.astro";

---

<MainLayout>
	<div class="container">
		<Carta />

		<Carta2 />

		<Carta3 />

		<Carta4 />
	</div>
</MainLayout>

<style>
	.container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: fit-content;
		margin-left: auto;
		margin-right: auto;
		padding: 0.5rem;
		color: white;
		background-color: transparent;
		border-color: rgb(255, 255, 255);
		border-style: solid;
		border-width: 0px;
		text-align: center;
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
			"Helvetica Neue", Arial, sans-serif, "Apple Color Emoji",
			"Segoe UI Emoji", "Segoe UI Symbol";
		position: relative;
	}
</style>
